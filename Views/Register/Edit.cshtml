                @Html.RadioButton("Gender", "Male") Male<br />
                @Html.RadioButton("Gender", "Female") Female<br />
            </div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" class="form-control" />
