<partial name="PartialView"></partial>
<h4>RegisterViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="UserNo" class="control-label"></label>*@
                <input asp-for="UserNo" type="hidden" class="form-control" />
                @*<span asp-validation-for="UserNo" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="LoginName" class="control-label"></label>
                <input asp-for="LoginName" class="form-control" />
                <span asp-validation-for="LoginName" class="text-danger"></span>
            </div>
